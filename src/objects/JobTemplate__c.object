    <validationRules>
        <fullName>AvoidModifyPublishedDate</fullName>
        <active>true</active>
        <description>Avoid to modify the Published Date manually.</description>
        <errorConditionFormula>ISCHANGED(PublishedDate__c) &amp;&amp; (!ISBLANK( PRIORVALUE(PublishedDate__c) ) || !ISPICKVAL(Status__c, &apos;Published&apos;) )</errorConditionFormula>
        <errorDisplayField>PublishedDate__c</errorDisplayField>
        <errorMessage>The Published Date cannot be edited manually. This is only set when a Job Template publishes.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>AvoidPublishJobNoTasks</fullName>
        <active>true</active>
        <description>Avoid to publish a Job with no tasks.</description>
        <errorConditionFormula>TasksNumber__c == 0 &amp;&amp;  !ISBLANK(Id) &amp;&amp; ISPICKVAL( Status__c, &apos;Published&apos;)</errorConditionFormula>
        <errorMessage>A Job cannot be published because there is not any task associated.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>ClosedJobsCannotChangeStatus</fullName>
        <active>true</active>
        <description>If the Job is closed the status values cannot change.</description>
        <errorConditionFormula>ISCHANGED(Status__c)
&amp;&amp; ISPICKVAL(PRIORVALUE(Status__c),  &apos;Closed&apos;)</errorConditionFormula>
        <errorDisplayField>Status__c</errorDisplayField>
        <errorMessage>The Job is Closed. The status cannot change.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>OnlyCanBeEditedInDraft</fullName>
        <active>true</active>
        <description>Name cannot be edited if the Job is not in Draft status.</description>
        <errorConditionFormula>AND (
    NOT ( ISPICKVAL(Status__c, &apos;Draft&apos;) ),
     ISCHANGED(Name)
)</errorConditionFormula>
        <errorDisplayField>Name</errorDisplayField>
        <errorMessage>Name cannot be edited if the Job is not in Draft status.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>StatusCannotChangeBackToDraft</fullName>
        <active>true</active>
        <description>Avoid setting Status to Draft if it is Published or Closed.</description>
        <errorConditionFormula>AND (
    ISCHANGED(Status__c),
    ISPICKVAL(Status__c, &apos;Draft&apos;)
)</errorConditionFormula>
        <errorDisplayField>Status__c</errorDisplayField>
        <errorMessage>The status cannot be Draft if the Job is Published or Closed.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>StatusMustBeDraftOnInsert</fullName>
        <active>true</active>
        <description>Job Status field must be Draft when inserting.</description>
        <errorConditionFormula>ISBLANK(Id)  &amp;&amp;  !ISPICKVAL( Status__c , &apos;Draft&apos;)</errorConditionFormula>
        <errorDisplayField>Status__c</errorDisplayField>
        <errorMessage>The Job Status must be Draft when creating a new Job.</errorMessage>
    </validationRules>

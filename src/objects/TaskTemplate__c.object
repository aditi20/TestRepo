    <sharingModel>ControlledByParent</sharingModel>
    <validationRules>
        <fullName>AvoidChangeTypeWhenUpdateTask</fullName>
        <active>true</active>
        <description>If type value has been set before this cannot change.</description>
        <errorConditionFormula>!ISNEW() &amp;&amp;  ISCHANGED( Type__c )</errorConditionFormula>
        <errorDisplayField>Type__c</errorDisplayField>
        <errorMessage>Once a Type is set previously this value cannot change.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>OnlySetFormWhenTypeIsForm</fullName>
        <active>true</active>
        <description>Set Form field only when Task Type is form.</description>
        <errorConditionFormula>!ISBLANK(Form__c) &amp;&amp; !ISPICKVAL(Type__c, &apos;form&apos;)</errorConditionFormula>
        <errorDisplayField>Form__c</errorDisplayField>
        <errorMessage>Form cannot be assigned to non data collection tasks.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>SelectFormWhenTypeIsForm</fullName>
        <active>true</active>
        <description>Guarantee Survey is required when Type value is form.</description>
        <errorConditionFormula>ISPICKVAL(Type__c, &apos;form&apos;) &amp;&amp; ISBLANK(Form__c)</errorConditionFormula>
        <errorDisplayField>Form__c</errorDisplayField>
        <errorMessage>Form is required for data collection tasks.</errorMessage>
    </validationRules>
</CustomObject>

    <deploymentStatus>Deployed</deploymentStatus>
    <description>Templates for Task contained into Jobs.</description>
    <enableActivities>false</enableActivities>
    <enableFeeds>false</enableFeeds>
    <enableHistory>false</enableHistory>
    <enableReports>false</enableReports>
    <fields>
        <fullName>Form__c</fullName>
        <deleteConstraint>SetNull</deleteConstraint>
        <description>Link to the survey that will be filled in this task</description>
        <externalId>false</externalId>
        <inlineHelpText>Associate a Survey to this task.</inlineHelpText>
        <label>Survey</label>
        <referenceTo>SurveyVersion__c</referenceTo>
        <relationshipLabel>Tasks</relationshipLabel>
        <relationshipName>Task_Templates</relationshipName>
        <required>false</required>
        <type>Lookup</type>
    </fields>
    <fields>
        <fullName>Instructions__c</fullName>
        <description>Instructions for the field officer.</description>
        <externalId>false</externalId>
        <inlineHelpText>Insert instructions for the field officer.</inlineHelpText>
        <label>Instructions</label>
        <length>500</length>
        <type>LongTextArea</type>
        <visibleLines>3</visibleLines>
    </fields>
    <fields>
        <fullName>JobTemplate__c</fullName>
        <description>Id of the job that contains this task</description>
        <externalId>false</externalId>
        <inlineHelpText>Select the Job this task belongs to.</inlineHelpText>
        <label>Job</label>
        <referenceTo>JobTemplate__c</referenceTo>
        <relationshipLabel>Tasks</relationshipLabel>
        <relationshipName>Task_Templates</relationshipName>
        <relationshipOrder>0</relationshipOrder>
        <reparentableMasterDetail>false</reparentableMasterDetail>
        <type>MasterDetail</type>
        <writeRequiresMasterRead>false</writeRequiresMasterRead>
    </fields>
    <fields>
        <fullName>Mapping__c</fullName>
        <description>Describes mapping from hierarchy objects to. (Used for form task types.)</description>
        <externalId>false</externalId>
        <inlineHelpText>Insert description from hierarchy.</inlineHelpText>
        <label>Mapping</label>
        <length>56000</length>
        <type>LongTextArea</type>
        <visibleLines>3</visibleLines>
    </fields>
    <fields>
        <fullName>Object__c</fullName>
        <description>JSON id of the object in the hierarchy that will be shown. (data-view and list-view only.)</description>
        <externalId>false</externalId>
        <inlineHelpText>This is the object Id of hierarchy.</inlineHelpText>
        <label>Object</label>
        <length>255</length>
        <required>false</required>
        <type>Text</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>Position__c</fullName>
        <description>Position of this task inside its job (defines order)</description>
        <externalId>false</externalId>
        <inlineHelpText>Order Position for tasks list.</inlineHelpText>
        <label>Position</label>
        <precision>3</precision>
        <required>true</required>
        <scale>0</scale>
        <type>Number</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>ResourceId__c</fullName>
        <description>Resource Id of the TaroWork library</description>
        <externalId>false</externalId>
        <inlineHelpText>This is the Id of the view Resource Task</inlineHelpText>
        <label>Resource id</label>
        <length>255</length>
        <required>false</required>
        <type>Text</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>Type__c</fullName>
        <description>Type of task (data-view, list-view, form)</description>
        <externalId>false</externalId>
        <inlineHelpText>Select a Type of Task.</inlineHelpText>
        <label>Type</label>
        <picklist>
            <picklistValues>
                <fullName>data-view</fullName>
                <default>false</default>
            </picklistValues>
            <picklistValues>
                <fullName>list-view</fullName>
                <default>false</default>
            </picklistValues>
            <picklistValues>
                <fullName>form</fullName>
                <default>false</default>
            </picklistValues>
            <sorted>false</sorted>
        </picklist>
        <type>Picklist</type>
    </fields>
    <label>Task</label>
    <nameField>
        <label>Task Name</label>
        <type>Text</type>
    </nameField>
    <pluralLabel>Tasks</pluralLabel>
